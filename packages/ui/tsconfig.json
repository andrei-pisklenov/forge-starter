{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "importHelpers": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "./src",
    "vite.config.ts",
    "vitest.config.ts"
  ]
}